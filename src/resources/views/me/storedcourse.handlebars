<div class="mt-4">
    <h3>Khóa học của tôi</h3>
    <div class="row">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Tên Khóa học</th>
                    <th scope="col">Trình độ</th>
                    <th scope="col" colspan="2">Thời gian tạo</th>
                </tr>
            </thead>
            <tbody>
                {{#each course}}
                <tr>
                    <th scope="row">{{sum @index}}</th>
                    <td>{{this.name}}</td>
                    <td>{{this.level}}</td>
                    <td>{{this.createdAt}}</td>
                    <td>
                        <a href="/course/{{this._id}}/edit" class="btn btn-primary">Sửa</a>
                        <buttontype="button" class="btn btn-danger" data-id="{{this._id}}" data-toggle="modal"
                            data-target="#exampleModal">Xóa</button>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Xóa môn học</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Bạn có chắc muốn xóa? Không thể khôi phục dữ liệu!
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
                <button id="buttondelete" type="button" class="btn btn-danger">Xóa bỏ</button>
            </div>
        </div>
    </div>
</div>


{{!-- Form delete ẩn --}}
<form name="formdelete" method="post" action=""></form>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var recipient;
        var deleteform = document.forms['formdelete']

        $('#exampleModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);// Button that triggered the modal
            recipient = button.data('id');
        });

        var btnDeleteCourse = document.getElementById('buttondelete');
        btnDeleteCourse.onclick = function(){
            deleteform.method="post";
            deleteform.action = "/course/delete/" + recipient;
            deleteform.submit();
        }
    })
</script>