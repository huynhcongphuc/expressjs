<div class="mt-4">
    <h3 class="text-danger">Cập nhật bài viết</h3>
    <form method="post" action="/course/update/{{course._id}}">
        <div class="form-group">
            <label for="name">Tên bài viết</label>
            <input name="name" type="text" class="form-control" value="{{course.name}}" id="name" aria-describedby="emailHelp">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea name="description" class="form-control" id="description" aria-describedby="emailHelp" style="min-height: 100px;">{{course.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="content">Nội dung</label>
            <textarea name="content" class="form-control" id="content" aria-describedby="emailHelp" style="min-height: 300px;">{{course.content}}</textarea>
        </div>
        <div class="form-group">
            <label for="videoid">videoid</label>
            <input name="videoid" type="text" class="form-control" value="{{course.videoid}}" id="videoid" aria-describedby="emailHelp">
        </div>
        <div class="form-group">
            <label for="level">từ khóa</label>
            <input name="level" type="text" class="form-control" value="{{course.level}}" id="level" aria-describedby="emailHelp">
        </div>
        <button type="submit" class="btn btn-primary">Sửa khóa học</button>
    </form>
</div>