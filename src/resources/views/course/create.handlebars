<div class="mt-4">
    <h3 class="text-danger">Đăng bài viết</h3>
    <form method="post" action="/course/store">
        <div class="form-group">
            <label for="name">Tên bài viết</label>
            <input name="name" type="text" class="form-control" id="name" aria-describedby="emailHelp"
                placeholder="Enter Post's name">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea name="description" type="text" class="form-control" id="description" aria-describedby="emailHelp"
                placeholder="Enter content" style="min-height: 100px;"></textarea>
        </div>
        <div class="form-group">
            <label for="content">Nội dung</label>
            <textarea name="content" class="form-control" id="content" aria-describedby="emailHelp"
                style="min-height: 300px;" placeholder="Enter content" ></textarea>
        </div>
        <div class="form-group">
            <label for="videoid">videoid</label>
            <input name="videoid" type="text" class="form-control" id="videoid" aria-describedby="emailHelp"
                placeholder="Enter link videos">
        </div>
        <div class="form-group">
            <label for="level">từ khóa</label>
            <input name="level" type="text" class="form-control" id="level" aria-describedby="emailHelp"
                placeholder="Enter keywords">
        </div>
        <button type="submit" class="btn btn-primary">Thêm khóa học</button>
    </form>
</div>